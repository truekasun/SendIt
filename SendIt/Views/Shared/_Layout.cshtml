<!DOCTYPE HTML>
<html>
<head>
    <title>Send It! - Send emails from Javascript!</title>
    <link rel="icon" type="image/png" href="~/Content/images/avatar.png">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!--[if lte IE 8]><script src="~/Content/assets/js/html5shiv.js"></script><![endif]-->
    <link rel="stylesheet" href="~/Content/assets/css/main.css" />
    <!--[if lte IE 9]><link rel="stylesheet" href="~/Content/assets/css/ie9.css" /><![endif]-->
    <!--[if lte IE 8]><link rel="stylesheet" href="~/Content/assets/css/ie8.css" /><![endif]-->
    <noscript><link rel="stylesheet" href="~/Content/assets/css/noscript.css" /></noscript>
</head>
<body class="is-loading">

    <!-- Wrapper -->
    <div id="wrapper">

        <!-- Main -->
        <section id="main">
            @RenderBody()
        </section>
        <!-- Footer -->
        <footer id="footer">
            <ul class="copyright">&copy; 2015, <b>SendIt!</b> | <a href="http://www.truekasun.tk/" target="_blank"><b>TK</b></a> | @Html.ActionLink("Documentation", "Index", "Help", new {area = ""}, null) | <a href="https://github.com/truekasun/SendIt" target="_blank">GitHub</a></ul>
        </footer>
    </div>

    <!-- Scripts -->
    <!--[if lte IE 8]><script src="~/Content/assets/js/respond.min.js"></script><![endif]-->
    <script>
        if ('addEventListener' in window) {
            window.addEventListener('load', function () { document.body.className = document.body.className.replace(/\bis-loading\b/, ''); });
            document.body.className += (navigator.userAgent.match(/(MSIE|rv:11\.0)/) ? ' is-ie' : '');
        }
    </script>

</body>
</html>